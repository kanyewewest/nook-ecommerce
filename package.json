{
  "name": "nook-ecommerce",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/rubberdvcky/nook-ecommerce.git",
  "author": "rubberdvcky <dvckyyyy@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "publish": "lerna publish",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "build": "lerna run build --stream",
    "watch": "lerna run watch --parallel",
    "test": "lerna run test --concurrency 1",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --cache --cache-location .cache/eslint/cache './packages/**/*.ts'",
    "release": "cross-env HUSKY_BYPASS=true lerna publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/parser": "^2.30.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
